{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"],
      "@hedera/*": ["hedera/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
